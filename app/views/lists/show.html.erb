<h1><%= @list.name %></h1>

<% if @list.tasks.any? %>
  <h4>Here are the taskz for yo list:</h4>

  <ul>
    <% @list.tasks.not_done.each do |task| %>
      <li>
        <%= task.description %> |
        <%= link_to "Edit", edit_list_task_path(@list, task) %> |
        <%= link_to "Delete", list_task_path(@list, task),
                              :data => {:confirm => "Are u sure?",
                                        :method => "delete"} %>
      </li>
      <% end %>
  </ul>
<% else %>
  <p>Soooo... there are no tasks yet. You should probably get on that.</p>
<% end %>

<em>
  <% if @list.tasks.done.any? %>
  <h5>Finished Tasks:</h5>

  <ul>
    <% @list.tasks.done.each do |task| %>
    <li>
      <%= task.description %> |
      <%= link_to "Edit", edit_list_task_path(@list, task) %> |
      <%= link_to "Delete", list_task_path(@list, task),
                            :data => {:confirm => "Are u sure?",
                            :method => "delete"} %>
      </li>
      <% end %>
    </ul>
  <% else %>
    <h5>You've made no progress on this list. Hurry up!</h5>
  <% end %>
</em>

<p><%= link_to "Add a task", new_list_task_path(@list) %></p>
<p><%= link_to "Edit", edit_list_path(@list) %></p>
<p><%= link_to "Delete", list_path(@list),
                        :data => {:confirm => "Are u sure?",
                                  :method => "delete"} %></p>
<p><%= link_to "Return to Lists", lists_path %></p>
